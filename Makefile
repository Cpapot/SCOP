#		 \ \    / /       (_)     | |   | |
#		  \ \  / /_ _ _ __ _  __ _| |__ | | ___  ___
#		   \ \/ / _` | '__| |/ _` | '_ \| |/ _ \/ __|
#		    \  / (_| | |  | | (_| | |_) | |  __/\__ \.
#		     \/ \__,_|_|  |_|\__,_|_.__/|_|\___||___/


RED				=	\033[1;31m
GREEN			=	\033[1;32m
YELLOW			=	\033[1;33m
BLUE			=	\033[1;34m
CYAN			=	\033[1;36m
DEFAULT			=	\033[0m
SUPPR			=	\r\033[2K

MUTE			:=	1

RUSTFLAGS		=

MKDIR			=	mkdir -p

RM				=	rm -rf

NAME			=	SCOP

define HEADER
"\e[2J\e[H
\033[1;36m
_____/\\\\\\\\\\\\\\\\\\\\\\__________/\\\\\\\\\\\\\\\\\\_______/\\\\\\\\\\_______/\\\\\\\\\\\\\\\\\\\\\\\\\\___
 ___/\\\\\\/////////\\\\\\_____/\\\\\\////////______/\\\\\\///\\\\\\____\\/\\\\\\/////////\\\\\\_
  __\\//\\\\\\______\\///____/\\\\\\/_____________/\\\\\\/__\\///\\\\\\__\\/\\\\\\_______\\/\\\\\\_
   ___\\////\\\\\\__________/\\\\\\______________/\\\\\\______\\//\\\\\\_\\/\\\\\\\\\\\\\\\\\\\\\\\\\\/__
    ______\\////\\\\\\______\\/\\\\\\_____________\\/\\\\\\_______\\/\\\\\\_\\/\\\\\\/////////____
     _________\\////\\\\\\___\\//\\\\\\____________\\//\\\\\\______/\\\\\\__\\/\\\\\\_____________
      __/\\\\\\______\\//\\\\\\___\\///\\\\\\___________\\///\\\\\\__/\\\\\\____\\/\\\\\\_____________
       _\\///\\\\\\\\\\\\\\\\\\\\\\/______\\////\\\\\\\\\\\\\\\\\\____\\///\\\\\\\\\\/_____\\/\\\\\\_____________
        ___\\///////////___________\\/////////_______\\/////_______\\///______________

\033[0m
endef
export HEADER

#				______ _ _
#				|  ____(_) |
#				| |__   _| | ___  ___
#				|  __| | | |/ _ \/ __|
#				| |    | | |  __/\__ \.
#				|_|    |_|_|\___||___/

SRCSFILES		=	main.rs		\
					parsing.rs	\

#					Full Path

SRCSPATH		=	./src/

SRCS			=	$(addprefix $(SRCSPATH), $(SRCSFILES))

EXECUTABLEPATH	=	./target/release/

TARGET			=	./target

EXECUTABLE		=	$(EXECUTABLEPATH)$(NAME)

#				  _____       _
#				 |  __ \     | |
#				 | |__) |   _| | ___  ___
#				 |  _  / | | | |/ _ \/ __|
#				 | | \ \ |_| | |  __/\__ \.
#				 |_|  \_\__,_|_|\___||___/

all : header ${NAME}

${NAME}: $(SRCS)
	cargo build --release
	@echo -n "${SUPPR} ${GREEN}	${NAME} : ðŸ†—${DEFAULT}\n"
	@mv ${EXECUTABLE} .

clean:
	@${RM} ${TARGET}
	@${RM} "Cargo.lock"

fclean: clean
	@echo "${RED}ðŸ—‘  ${NAME} cleanded"
	@${RM} ${NAME}

header:
	@echo "$$HEADER"

re:
	@${MAKE} --no-print-directory fclean
	@${MAKE} --no-print-directory all

.PHONY : re all clean fclean header
